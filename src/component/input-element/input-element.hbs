<label class="form__label">{{labelText}}</label>
<input class="form__input"
  id={{ idInput }}
  type="{{typeInput}}"
  {{#if valueInput }}
  value={{ valueInput }}
  {{/if}}
  name={{ nameInput }}
  {{#if placeholderInput }}
  placeholder={{ placeholderInput }}
  {{/if}}
  required>
</input>
  {{#if spanId}}
  <span class="form__error" id={{spanId}}></span>
  {{/if}}