<div class="form__element">
  <label class="form__label">{{ labelText }}</label>
  <input class="{{classNameInput}}"
    id={{ idInput }}
    type="{{typeInput}}"
    {{#if valueInput }}
    value={{ valueInput }}
    {{/if}}
  name={{ nameInput }}
  {{#if placeholderInput }}
  placeholder={{ placeholderInput }}
  {{/if}}
  required></input>
</div >